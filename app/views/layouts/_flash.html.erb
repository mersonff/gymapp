<% if flash.any? %>
  <div class="flash-messages space-y-2 p-4">
    <% flash.each do |type, message| %>
      <div data-controller="toast" 
           data-toast-duration-value="5000"
           class="<%= flash_class(type) %> px-4 py-3 rounded-lg shadow-lg border flex items-center justify-between transform transition-all duration-300 ease-in-out">
        <div class="flex items-center">
          <%= flash_icon(type) %>
          <span class="ml-3 text-sm font-medium"><%= message %></span>
        </div>
        <button data-action="click->toast#close" class="ml-4 text-gray-400 hover:text-gray-600">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
