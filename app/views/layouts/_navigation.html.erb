<aside class="w-64 bg-gradient-to-b from-slate-900 to-slate-800 text-white flex flex-col shadow-xl min-h-screen">
  <!-- Logo -->
  <div class="p-6 border-b border-slate-700">
    <%= link_to root_path, class: "flex items-center space-x-3" do %>
      <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
      </div>
      <div>
        <span class="text-xl font-bold">GymAPP</span>
        <div class="text-xs text-slate-300">Sistema de Gestão</div>
      </div>
    <% end %>
  </div>

  <!-- Navigation Menu -->
  <nav class="flex-1 px-4 py-6 space-y-2">
    <!-- Dashboard -->
    <%= link_to root_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-slate-700/50 #{current_page?(root_path) ? 'bg-blue-600 text-white' : 'text-slate-300 hover:text-white'}" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
      </svg>
      <span>Dashboard</span>
    <% end %>

    <!-- Clientes -->
    <%= link_to clients_path, data: { turbo: false }, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-slate-700/50 #{current_page?(clients_path) ? 'bg-blue-600 text-white' : 'text-slate-300 hover:text-white'}" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <span>Clientes</span>
    <% end %>

    <!-- Planos -->
    <%= link_to plans_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-slate-700/50 #{current_page?(plans_path) ? 'bg-blue-600 text-white' : 'text-slate-300 hover:text-white'}" do %>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span>Planos</span>
    <% end %>

    <!-- Usuários -->
    <% if current_user.admin? %>
      <%= link_to users_path, class: "flex items-center space-x-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-slate-700/50 #{current_page?(users_path) ? 'bg-blue-600 text-white' : 'text-slate-300 hover:text-white'}" do %>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
        <span>Usuários</span>
      <% end %>
    <% end %>
  </nav>

  <!-- User Profile -->
  <div class="p-4 border-t border-slate-700">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full flex items-center justify-center">
        <span class="text-sm font-semibold text-white">
          <%= current_user.username.first.upcase if current_user %>
        </span>
      </div>
      <div class="flex-1 min-w-0">
        <%= link_to edit_user_path(current_user), class: "block hover:bg-slate-700/30 rounded px-2 py-1 -mx-2 -my-1 transition-colors" do %>
          <div class="text-sm font-medium text-white truncate">
            <%= current_user.username if current_user %>
          </div>
          <div class="text-xs text-slate-400 truncate">
            <%= current_user.business_name if current_user %>
          </div>
        <% end %>
      </div>
      <div class="flex-shrink-0">
        <%= button_to logout_path, 
            method: :delete,
            data: { turbo_confirm: "Tem certeza que deseja sair?" },
            class: "p-2 text-slate-400 hover:text-white hover:bg-slate-700 rounded-lg transition-colors",
            title: "Sair do sistema" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</aside>
