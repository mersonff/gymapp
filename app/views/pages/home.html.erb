      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="mb-2 sm:mb-0">
          <p class="text-xs sm:text-sm font-medium text-gray-600">Arrecadação do Mês</p>
          <p class="text-lg sm:text-xl lg:text-3xl font-bold text-blue-600">R$ <%= number_with_precision(@monthly_revenue, precision: 2, delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-blue-100 rounded-lg flex items-center justify-center self-end sm:self-auto">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Financial Dashboard -->
