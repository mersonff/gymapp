<% content_for :page_title, "Dashboard" %>

<div class="space-y-4 lg:space-y-6 max-w-full">
  <!-- Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 lg:gap-6">
    <!-- Total de Clientes -->
