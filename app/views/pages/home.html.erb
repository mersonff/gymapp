<div class="center jumbotron">
  <h1>Academia <%= current_user.business_name %></h1>
</div>

<script>
    Chartkick.configure({language: "pt-BR"})
</script>

<div class="row">
  <%= line_chart @clients.group_by_month(:created_at).count, title: "Novos clientes x Mês" %>
</div>

<div class="row">
  <%= column_chart @payments.group_by_day_of_week(:payment_date, format: "%a").sum(:value), 
  prefix: "R$ ", title: "Recebimentos dos últimos 7 dias" %>
</div>

