      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="mb-2 sm:mb-0">
          <p class="text-xs sm:text-sm font-medium text-gray-600">Em Dia</p>
          <p class="text-xl sm:text-2xl lg:text-3xl font-bold text-green-600"><%= @current_clients %></p>
        </div>
        <div class="w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 bg-green-100 rounded-lg flex items-center justify-center self-end sm:self-auto">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="mt-2 sm:mt-3 lg:mt-4">
        <%= link_to clients_path, class: "text-xs sm:text-sm text-green-600 hover:text-green-800 font-medium" do %>
          Ver clientes →
