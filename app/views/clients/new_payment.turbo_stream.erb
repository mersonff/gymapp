<%= turbo_stream.update "main" do %>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to client_path(@client), 
          class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors",
          data: { turbo_stream: true } do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Voltar para <%= @client.name %>
      <% end %>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Registrar Pagamento</h2>
        <p class="text-gray-600 mt-1">Registre um novo pagamento de <%= @client.name %></p>
      </div>

      <div id="payment_form">
        <%= form_with model: [@client, @payment], url: create_payment_client_path(@client), 
            data: { turbo_stream: true },
            class: "space-y-6" do |form| %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :payment_date, "Data do Pagamento", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.date_field :payment_date, 
                  value: Date.current,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500" %>
            </div>

            <div>
              <%= form.label :value, "Valor (R$)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :value, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500",
                  step: 0.01,
                  placeholder: "100.00" %>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-6">
            <%= link_to "Cancelar", client_path(@client), 
                class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors",
                data: { turbo_stream: true } %>
            <%= form.submit "Registrar Pagamento", 
                class: "px-6 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>