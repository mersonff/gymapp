<%= turbo_stream.update "main" do %>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to client_path(@client), 
          class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors",
          data: { turbo_stream: true } do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Voltar para <%= @client.name %>
      <% end %>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Adicionar Dobras Cutâneas</h2>
        <p class="text-gray-600 mt-1">Registre as dobras cutâneas de <%= @client.name %></p>
      </div>

      <div id="skinfold_form">
        <%= form_with model: [@client, @skinfold], url: create_skinfold_client_path(@client), 
            data: { turbo_stream: true },
            class: "space-y-6" do |form| %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div>
              <%= form.label :chest, "Peito (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :chest, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "8.5" %>
            </div>

            <div>
              <%= form.label :midaxilary, "Axilar Média (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :midaxilary, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "12.0" %>
            </div>

            <div>
              <%= form.label :subscapular, "Subescapular (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :subscapular, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "10.5" %>
            </div>

            <div>
              <%= form.label :bicep, "Bíceps (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :bicep, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "6.0" %>
            </div>

            <div>
              <%= form.label :tricep, "Tríceps (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :tricep, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "15.0" %>
            </div>

            <div>
              <%= form.label :abdominal, "Abdominal (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :abdominal, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "20.0" %>
            </div>

            <div>
              <%= form.label :suprailiac, "Suprailíaca (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :suprailiac, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "18.5" %>
            </div>

            <div>
              <%= form.label :thigh, "Coxa (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :thigh, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "25.0" %>
            </div>

            <div>
              <%= form.label :calf, "Panturrilha (mm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :calf, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  step: 0.1,
                  placeholder: "12.0" %>
            </div>
          </div>

          <!-- Info sobre cálculo -->
          <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-purple-600 mt-0.5 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h4 class="text-sm font-medium text-purple-900">Cálculo Automático</h4>
                <p class="text-sm text-purple-700 mt-1">
                  O percentual de gordura corporal será calculado automaticamente usando as fórmulas de Pollock & Jackson baseadas na idade e sexo do cliente.
                </p>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-6">
            <%= link_to "Cancelar", client_path(@client), 
                class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors",
                data: { turbo_stream: true } %>
            <%= form.submit "Salvar Dobras", 
                class: "px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>