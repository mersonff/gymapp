<%= form_with(model: client,
              data: { 
                controller: "form", 
                form_target: "form",
                turbo_stream: true
              },
              html: {
                "accept" => "text/vnd.turbo-stream.html"
              },
              class: "space-y-8") do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h2 class="text-red-800 font-semibold text-lg mb-2">
        <%= pluralize(client.errors.count, "erro") %> impediram que este cliente fosse salvo:
      </h2>
      <ul class="text-red-700 text-sm space-y-1">
        <% client.errors.full_messages.each do |message| %>
          <li class="flex items-start">
            <svg class="w-4 h-4 text-red-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Informações Pessoais -->
  <div class="bg-white rounded-lg p-6 mb-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      Informações Pessoais
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-1">
        <%= form.label :name, "Nome Completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:name].any?}",
            placeholder: "Digite o nome completo",
            required: true %>
        <% if client.errors[:name].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:name].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :birthdate, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :birthdate, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:birthdate].any?}",
            required: true %>
        <% if client.errors[:birthdate].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:birthdate].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :cellphone, "Telefone", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.telephone_field :cellphone, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:cellphone].any?}",
            placeholder: "(00) 00000-0000",
            required: true %>
        <% if client.errors[:cellphone].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:cellphone].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :gender, "Gênero", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :gender, 
            [['Masculino', 'M'], ['Feminino', 'F'], ['Outro', 'O']], 
            { prompt: 'Selecione o gênero' },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:gender].any?}" } %>
        <% if client.errors[:gender].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:gender].first %></p>
        <% end %>
      </div>

      <div class="space-y-1 md:col-span-2">
        <%= form.label :address, "Endereço", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :address, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:address].any?}",
            rows: 3,
            placeholder: "Digite o endereço completo" %>
        <% if client.errors[:address].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:address].first %></p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Plano -->
  <div class="bg-white rounded-lg p-6 mb-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Plano de Treino
    </h3>
    
    <div class="space-y-1">
      <%= form.label :plan_id, "Selecionar Plano", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :plan_id, Plan.all, :id, :description,
          { prompt: 'Escolha um plano' },
          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:plan_id].any?}",
            required: true } %>
      <% if client.errors[:plan_id].any? %>
        <p class="text-sm text-red-600 mt-1"><%= client.errors[:plan_id].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Medidas Corporais -->
  <div class="bg-white rounded-lg p-6 mb-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      Medidas Iniciais
    </h3>

    <%= form.fields_for :measurements do |measurement_form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-1">
          <%= measurement_form.label :height, "Altura (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :height, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "175" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :weight, "Peso (kg)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :weight, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "70" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :chest, "Peito (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :chest, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "95" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :left_arm, "Braço Esquerdo (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :left_arm, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "35" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :right_arm, "Braço Direito (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :right_arm, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "35" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :waist, "Cintura (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :waist, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "80" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :abdomen, "Abdômen (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :abdomen, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "85" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :hips, "Quadris (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :hips, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "95" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :left_thigh, "Coxa Esquerda (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :left_thigh, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "55" %>
        </div>

        <div class="space-y-1">
          <%= measurement_form.label :righ_thigh, "Coxa Direita (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= measurement_form.number_field :righ_thigh, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              step: 1,
              min: 0,
              placeholder: "55" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Botões de Ação -->
  <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
    <button type="submit" 
            data-form-target="submit"
            data-action="turbo:submit-start->form#submitStart turbo:submit-end->form#submitEnd"
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition duration-200 ease-in-out transform hover:scale-105 flex items-center justify-center disabled:opacity-50 disabled:cursor-not-allowed">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <%= client.persisted? ? 'Atualizar Cliente' : 'Cadastrar Cliente' %>
    </button>
    
    <%= link_to clients_path, 
        class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md transition duration-200 ease-in-out transform hover:scale-105 flex items-center justify-center text-decoration-none" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Cancelar
    <% end %>
  </div>
<% end %>
