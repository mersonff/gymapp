<%= form_with(model: client,
              data: { 
                controller: "form", 
                form_target: "form",
                turbo_stream: true
              },
              html: {
                "accept" => "text/vnd.turbo-stream.html"
              },
              class: "space-y-6") do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h2 class="text-red-800 font-semibold text-lg mb-2">
        <%= pluralize(client.errors.count, "erro") %> impediram que este cliente fosse salvo:
      </h2>
      <ul class="text-red-700 text-sm space-y-1">
        <% client.errors.full_messages.each do |message| %>
          <li class="flex items-start">
            <svg class="w-4 h-4 text-red-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Informações Pessoais -->
  <div class="bg-white rounded-lg p-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      Informações Pessoais
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-1">
        <%= form.label :name, "Nome Completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:name].any?}",
            placeholder: "Digite o nome completo",
            required: true %>
        <% if client.errors[:name].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:name].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :birthdate, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :birthdate, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if client.errors[:birthdate].any?}",
            required: true %>
        <% if client.errors[:birthdate].any? %>
          <p class="text-sm text-red-600 mt-1"><%= client.errors[:birthdate].first %></p>
        <% end %>
      </div>

      <div class="space-y-1">
        <%= form.label :cellphone, "Telefone", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.telephone_field :cellphone, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "(11) 99999-9999" %>
      </div>

      <div class="space-y-1">
        <%= form.label :gender, "Sexo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :gender, 
            options_for_select([
              ["Selecione...", ""],
              ["Masculino", "Masculino"],
              ["Feminino", "Feminino"]
            ], client.gender),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="md:col-span-2 space-y-1">
        <%= form.label :address, "Endereço", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :address, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            rows: 3,
            placeholder: "Endereço completo" %>
      </div>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", clients_path, 
        class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors",
        data: { turbo_stream: true } %>
    <%= form.submit client.persisted? ? "Atualizar Cliente" : "Criar Cliente", 
        class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors shadow-sm" %>
  </div>
<% end %>