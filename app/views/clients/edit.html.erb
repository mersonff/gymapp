<% content_for :page_title, "Editar Cliente" %>

<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <!-- Header -->
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Editar Cliente</h2>
      <p class="text-gray-600 mt-1">Atualize as informações do cliente <%= @client.name %></p>
    </div>

    <!-- Form -->
    <div id="edit_client_form">
      <%= render 'form', client: @client %>
    </div>
  </div>
</div>

