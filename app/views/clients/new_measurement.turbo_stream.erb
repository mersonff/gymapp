<%= turbo_stream.update "main" do %>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to client_path(@client), 
          class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors",
          data: { turbo_stream: true } do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Voltar para <%= @client.name %>
      <% end %>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Adicionar Medidas</h2>
        <p class="text-gray-600 mt-1">Registre as novas medidas corporais de <%= @client.name %></p>
      </div>

      <div id="measurement_form">
        <%= form_with model: [@client, @measurement], url: create_measurement_client_path(@client), 
            data: { turbo_stream: true },
            class: "space-y-6" do |form| %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :height, "Altura (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :height, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "175" %>
            </div>

            <div>
              <%= form.label :weight, "Peso (kg)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :weight, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  step: 0.1,
                  placeholder: "70.5" %>
            </div>

            <div>
              <%= form.label :chest, "Peito (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :chest, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "95" %>
            </div>

            <div>
              <%= form.label :waist, "Cintura (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :waist, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "80" %>
            </div>

            <div>
              <%= form.label :left_arm, "Braço Esquerdo (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :left_arm, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "35" %>
            </div>

            <div>
              <%= form.label :right_arm, "Braço Direito (cm)", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :right_arm, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "35" %>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-6">
            <%= link_to "Cancelar", client_path(@client), 
                class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors",
                data: { turbo_stream: true } %>
            <%= form.submit "Salvar Medidas", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>