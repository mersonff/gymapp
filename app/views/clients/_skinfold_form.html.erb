<%= form_with model: [skinfold.client, skinfold], local: true, class: "space-y-4" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.label :chest, "Peito (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :chest, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <% if skinfold.errors[:chest].any? %>
        <p class="text-red-500 text-xs mt-1"><%= skinfold.errors[:chest].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :midaxilary, "Axilar Média (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :midaxilary, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :subscapular, "Subescapular (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :subscapular, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :bicep, "Bíceps (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :bicep, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :tricep, "Tríceps (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :tricep, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :abdominal, "Abdominal (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :abdominal, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :suprailiac, "Supra-ilíaca (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :suprailiac, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :thigh, "Coxa (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :thigh, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :calf, "Panturrilha (mm)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :calf, step: 0.1, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Cancelar", client_path(skinfold.client), class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    <%= f.submit "Salvar", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700" %>
  </div>
<% end %>