<%= turbo_stream.update "main" do %>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb/Navigation -->
    <div class="mb-6">
      <%= link_to clients_path, 
          class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors",
          data: { turbo_stream: true } do %>
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Voltar para Clientes
      <% end %>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <!-- Header -->
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Novo Cliente</h2>
        <p class="text-gray-600 mt-1">Cadastre um novo cliente na academia</p>
      </div>

      <!-- Form -->
      <div id="new_client_form">
        <%= render 'form', client: @client %>
      </div>
    </div>
  </div>
<% end %>