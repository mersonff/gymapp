<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Cabeçalho -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">
        Histórico de Medidas - <%= @client.name %>
      </h1>
      <p class="mt-2 text-sm text-gray-600">
        Todas as medidas corporais registradas para este cliente
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to client_path(@client), 
          class: "bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar
      <% end %>
      <%= link_to new_client_measurement_path(@client), 
          class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Nova Medida
      <% end %>
    </div>
  </div>

  <% if @measurements && @measurements.any? %>
    <!-- Lista de Medidas -->
    <div class="space-y-6">
      <% @measurements.each_with_index do |measurement, index| %>
        <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition duration-150">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-semibold text-gray-900">
              <%= measurement.created_at.strftime("%d/%m/%Y") %>
            </h3>
            <% if measurement.weight && measurement.height %>
              <div class="text-sm">
                <span class="font-medium text-gray-500">IMC:</span>
                <% height_m = measurement.height.to_f / 100 %>
                <% imc = (measurement.weight.to_f / (height_m ** 2)).round(1) %>
                <span class="font-semibold text-blue-600"><%= imc %></span>
              </div>
            <% end %>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 text-sm">
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Peso</span>
              <p class="text-lg font-semibold text-blue-600"><%= measurement.weight || "-" %> kg</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Altura</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.height || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Peito</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.chest || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Cintura</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.waist || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Quadril</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.hips || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Braço Esq</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.left_arm || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Braço Dir</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.right_arm || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Coxa Esq</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.left_thigh || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Coxa Dir</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.righ_thigh || "-" %> cm</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
              <span class="font-medium text-gray-500 block mb-1">Abdômen</span>
              <p class="text-lg font-semibold text-gray-900"><%= measurement.abdomen || "-" %> cm</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Paginação -->
    <div class="mt-8 flex items-center justify-between">
      <div class="flex items-center">
        <p class="text-sm text-gray-700">
          Mostrando <span class="font-medium"><%= @measurements.offset + 1 %></span> até 
          <span class="font-medium"><%= [@measurements.offset + @measurements.per_page, @measurements.total_entries].min %></span> de 
          <span class="font-medium"><%= @measurements.total_entries %></span> medidas
        </p>
      </div>
      <div class="pagination-wrapper">
        <%= will_paginate @measurements, 
            class: "pagination",
            inner_window: 1,
            outer_window: 0,
            previous_label: "← Anterior",
            next_label: "Próximo →" %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma medida registrada</h3>
      <p class="mt-1 text-sm text-gray-500">Registre a primeira medida para acompanhar a evolução.</p>
      <div class="mt-6">
        <%= link_to new_client_measurement_path(@client), 
            class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 flex items-center mx-auto w-fit" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Nova Medida
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }
  
  .pagination a, .pagination em, .pagination span {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border: 1px solid #d1d5db;
    background-color: #ffffff;
    color: #374151;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .pagination a:hover {
    background-color: #f3f4f6;
    border-color: #9ca3af;
  }
  
  .pagination .current {
    background-color: #3b82f6;
    border-color: #3b82f6;
    color: #ffffff;
  }
  
  .pagination .disabled {
    background-color: #f9fafb;
    border-color: #e5e7eb;
    color: #9ca3af;
  }
</style>
