<div id="login-page" class="row">
  <h1 class="center-align">Log in</h1>
  <div class="col s12 z-depth-6 card-panel">
    <%= form_for(:session, :html => {class: "login-form", role: "form"}, url: login_path) do |f| %>
      <div class="row">
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">mail_outline</i>
          <%= f.text_field :email, class: "validate" %>
          <label for="email" data-error="wrong" data-success="right">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">lock_outline</i>
          <%= f.password_field :password, class: "validate"%>
          <label for="password">Senha</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.button "Log in", class: "btn waves-effect waves-light col s12" %>
        </div>     
      </div>
      <div class="row">
        <div class="input-field center-align">
          <p class="margin medium-small"><%= link_to "Registre-se!", signup_path %></p>
        </div>     
      </div>
    <% end %>
  </div>
</div>
