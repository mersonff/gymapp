<div class ="row">
<div class="col s12 m6 offset-m3">
  <div class="card center-align">
    <div class="card-image">
      <%= image_tag("login_page_img.jpg", :alt => "", class: "activator") %>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
          <li class="tab"><a href="#test4">Log in</a></li>
          <li class="tab"><a href="#test6">Registrar-se</a></li>
      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div id="test4">
        <div class="row">
          <%= form_for(:session, :html => { role: "form" }, url: login_path) do |f| %>
            <div class="input-field col s12">
              <i class="material-icons prefix">mail_outline</i>
              <%= f.text_field :email, class: "validate" %>
              <label for="email">E-mail</label>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock_outline</i>
              <%= f.password_field :password, class: "validate"%>
              <label for="password">Senha</label>
            </div>
            <div>
              <%= f.button "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
      <div id="test6">
          <div class="row">
            <%= form_for(:user, :url => users_path) do |f| %>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">account_box</i>
                    <%= f.text_field :username, class: "validate" %>
                    <label for="username">Nome de usuÃ¡rio</label>
                  </div>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">business</i>
                    <%= f.text_field :business_name, class: "validate" %>
                    <label for="business_name">Nome Fantasia</label>
                  </div>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">mail_outline</i>
                    <%= f.text_field :email, class: "validate" %>
                    <label for="email">Email</label>
                  </div>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">mail_outline</i>
                    <%= f.text_field :email_confirmation, class: "validate" %>
                    <label for="email_confirmation">Confirme seu Email</label>
                  </div>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    <%= f.password_field :password, class: "validate"%>
                    <label for="password">Senha</label>
                  </div>
                  <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    <%= f.password_field :password_confirmation, class: "validate"%>
                    <label for="password_confirmation">Confirme sua Senha</label>
                  </div>
                  <div>
                    <%= f.button "Registrar-se", class: "btn waves-effect waves-light col s12" %>
                  </div>
              <% end %>
          </div>
      </div>
      </div>
  </div>
            </div>
        </div>
    </div>
  </div>
